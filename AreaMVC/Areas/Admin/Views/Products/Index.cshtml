
@{
    ViewData["Title"] = "Index";
}
@model List<Product>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürün Listesi</h3>
            </div>
            <div class="card-body">
                <div class="table table-responsive-md">
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Ürün Adı</th>
                                <th>Kategori</th>
                                <th>Stok Miktarı</th>
                                <th>Eklenme Tarihi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Id</td>
                                    <td>@product.Name</td>
                                    <td>@product.Category</td>
                                    <td>@product.Stock</td>
                                    <td>@product.CreatedDate.ToShortDateString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-area="Admin" asp-controller="Products" asp-action="AddProduct" class="btn btn-outline-info d-block">Yeni Ürün Ekle</a>
            </div>
        </div>
    </div>
</div>